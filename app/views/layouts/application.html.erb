<!DOCTYPE html>
<html>
  <head>
    <title>TransportServer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>

  <script src="https://cdn.auth0.com/js/auth0/8.8/auth0.min.js"></script>
  <script>
    var webAuth = new auth0.WebAuth({
      domain: 'allaboardapps.auth0.com',
      clientID: '5vl2dBpcqZy8sCc0C1x2WXODn8PGzT1v',
      redirectUri: 'https://transport-server-staging.herokuapp.com/auth/oauth2/callback',
      audience: 'https://allaboardapps.auth0.com/userinfo',
      responseType: 'code',
      scope: 'openid profile',
      state: '<%= get_state %>'
    });

    function signin() {
      webAuth.authorize();
    }
  </script>
</html>
